<h1>Listing events</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Ip</th>
    <th>Category</th>
    <th>Action</th>
    <th>Label</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.email %></td>
    <td><%= event.ip %></td>
    <td><%= event.category %></td>
    <td><%= event.action %></td>
    <td><%= event.label %></td>
    <td><%= event.value %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

